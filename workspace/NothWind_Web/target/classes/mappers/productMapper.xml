<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.safetia.nothwind.dto.ProductDTO">
  
  	<resultMap type="com.safetia.nothwind.dto.ProductDTO" id="productDTO">
  	</resultMap>
  
  	<select id="productListAll" resultType="productDTO">
  		SELECT *
  		FROM study_product
  		ORDER BY no DESC
  		limit #{startPage} , #{perPageNum}
  	</select>
  	
  	<select id="selectProduct"  resultType="productDTO">
  		SELECT * 
  		FROM study_product
  		WHERE no = #{no}
  	</select>
  	
  	<select id="productCount"  resultType="int">
  		SELECT COUNT(no)
  		FROM study_product
  	</select>
  	
  	
  	<update id="productUpdate" >
  		UPDATE 
  			study_product
  			
  			SET
  				 title=#{title} ,
  				 price=#{price}
  		where no=${no}
  		
  	</update>
  	
  	<insert id="productInsert">
  		INSERT INTO
  			study_product
  			(title, price)
  		VALUES
  			( #{title}, #{price})
  	</insert>
  	
  	<delete id="removeProduct">
  	
  		DELETE FROM 
  			study_product
  		WHERE 
  			no = #{no}
  	</delete>
  
  </mapper>